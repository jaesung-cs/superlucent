#version 450

layout (local_size_x = 256) in;

#include "fluid_simulation_params.glsl"
#include "neighbors.glsl"

void main()
{
  const uint index = gl_GlobalInvocationID.x;

  // Neighbor count
  if (index < params.num_particles)
    neighbors.buf[index] = 0;

  // Neighbor indices
  else
    neighbors.buf[index] = -1;
}
